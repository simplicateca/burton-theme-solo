{%- extends "_burton/base/container" -%}

{# {%- macro container__desktopLeft( content = null, container = null ) -%}
    {%- set content = _self.container( content, "desktopLeft", template: _self ) -%}
    {{- _self.container( content, "fluid", template: _self ) -}}
{%- endmacro -%}

{%- macro container__tabletLeft( content = null, container = null ) -%}
    {%- set content = _self.container( content, "tabletLeft", template: _self ) -%}
    {{- _self.container( content, "fluid", template: _self ) -}}
{%- endmacro -%} #}



{%- block defs -%}
    {%- set defs = {
        "container_desktop" : {
            "tag": "div",
            "attr": { "class": ["@container max-w-7xl mx-auto relative container"] }
        },

        "container_desktop-left" : {
            "tag": "div",
            "attr": { "class": ["@container max-w-7xl !ml-0 relative"] },
            "parent": "fluid"
        },

        "container_fluid" : {
            "tag": "div",
            "attr": { "class": ["@container 2xl:container px-4 sm:px-8 md:max-2xl:px-4 relative z-20"] }
        },

        "container_knockout" : {
            "tag": "div",
            "attr": { "class": ["drop-shadow-xl sm:mx-8 2xl:max-w-[1480px] 2xl:mx-auto"] }
        },

        "container_tablet" : {
            "tag": "div",
            "attr": { "class": ["@container max-w-5xl mx-auto relative px-4"] }
        },

        "container_tablet-left" : {
            "tag": "div",
            "attr": { "class": ["@container max-w-5xl ml-0 relative px-4"] },
            "parent": "fluid"
        },

        "container_relative" : {
            "tag": "div",
            "attr": { "class": ["@container relative w-full"], "style": null }
        },

        "container_sticky" : {
            "tag": "div",
            "attr": { "class": ["@container sticky top-20"] }
        }
    } -%}

    {{- _self.merge_json( parent(), defs|json_encode ) -}}
{%- endblock -%}