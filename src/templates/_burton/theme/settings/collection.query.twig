{%- set common = {
    limit: {
        label: "Limit",
        help: "Use 0 for no limit (or to allow presentation specific limits)",
        number : { min: 0, max: 100, default: 0, step: 1 }
    },

    sort: {
        label: "Sort Order",
        help: "Set a default order (can be overridden when presenting)",
        select: {
            default: { label: "Newest to Oldest", orderBy: ["postDate","desc"] },
            title:   { label: "Alphabetical",     orderBy: ["title","asc"] },
            oldest:  { label: "Oldest to Newest", orderBy: ["postDate","asc"] },
            random:  { label: "Random", orderBy: ["RAND()"] }
        }
    },

    sortSimple: {
        label: "Sort Order",
        help: "Set a default order (can be overridden when presenting)",
