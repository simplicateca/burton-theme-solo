{% extends "_burton/base/partial" -%}

{% block email__pretext "" -%}
{% block email__header  tag( 'a', { href: siteUrl, text: siteName } ) -%}
{% block email__body    "" -%}
{% block email__footer  tag( 'a', { href: siteUrl, text: siteUrl } ) -%}

{% block font__base    'font-family: Montserrat, Helvetica, Arial, sans-serif; word-break: break-word;  font-size: 16px;' %}

{% block button__color '#ed1b24' %}

{% block email__contentrows %}
    {## Email Header ##}
    <tr><td class="email-masthead" style="{{ block('font__base') }} text-align: center; padding: 25px 0;" align="center">
        <span class="f-fallback email-masthead_name" style="color: #A8AAAF; font-weight: bold; text-decoration: none; text-shadow: 0 1px 0 white;">
            {{ block('email__header') }}
        </span>
    </td></tr>

    {## Email Body ##}
    <tr><td class="email-body" width="570" cellpadding="0" cellspacing="0" style="{{ block('font__base') }} margin: 0; padding: 0; width: 100%; -premailer-width: 100%; -premailer-cellpadding: 0; -premailer-cellspacing: 0;">
        <table class="email-body_inner" align="center" width="570" cellpadding="0" cellspacing="0" role="presentation" style="width: 570px; -premailer-width: 570px; -premailer-cellpadding: 0; -premailer-cellspacing: 0; background-color: #FFFFFF; margin: 0 auto; padding: 0;" bgcolor="#FFFFFF">
            <tr>
                <td class="content-cell" style="{{ block('font__base') }} padding: 45px;">
                    <div class="f-fallback">{{ block('email__body') }}</div>
                </td>
            </tr>
        </table>
    </td></tr>

    {## Email Footer ##}
    <tr><td style="{{ block('font__base') }}">
        <table class="email-footer" align="center" width="570" cellpadding="0" cellspacing="0" role="presentation" style="width: 570px; -premailer-width: 570px; -premailer-cellpadding: 0; -premailer-cellspacing: 0; text-align: center; margin: 0 auto; padding: 0;">
            <tr>
                <td class="content-cell" align="center" style="{{ block('font__base') }} padding: 45px;">
                    <p class="f-fallback sub align-center" style="font-size: 13px; line-height: 1.625; text-align: center; color: #A8AAAF; margin: .4em 0 1.1875em;" align="center">
                        {{ block('email__footer') }}
                    </p>
                </td>
            </tr>
        </table>
    </td></tr>
{% endblock %}



