{## Order Summary
{-------------------------------------------------------------------------------------##}
{%- macro order_summary( order, settings ) -%}
    {%- set settings = {
        dtclass     : 'text-sm w-20',
        ddclass     : 'text-sm',
    } | merge( settings ??? { _: true } ) -%}

    {% if order %}
        <dl class="flex flex-col gap-2">
            <div class="flex items-center gap-2">
                <dt class="{{ settings.dtclass }}"><strong>{{ 'Order'|t }}</strong></dt>
                <dd class="{{ settings.ddclass }}"><span>{{ order.reference }}</span></dd>
            </div>

            <div class="flex items-center gap-2">
                <dt class="{{ settings.dtclass }}"><strong>{{ 'Date'|t }}</strong></dt>
                <dd class="{{ settings.ddclass }}"><span>{{ order.dateOrdered|date }}</span></dd>
            </div>

            <div class="flex items-center gap-2">
                <dt class="{{ settings.dtclass }}"><strong>{{ 'Customer'|t }}</strong></dt>
                <dd class="{{ settings.ddclass }}"><span>{{ order.email }}</span></dd>
            </div>

            <div class="flex items-center gap-2">
                <dt class="{{ settings.dtclass }}"><strong>{{ 'Total'|t }}</strong></dt>
                <dd class="{{ settings.ddclass }}"><span>{{ order.totalPriceAsCurrency }}</span></dd>
            </div>

            <div class="flex items-center gap-2">
                <dt class="{{ settings.dtclass }}"><strong>{{ 'Payment Status'|t }}</strong></dt>
                <dd class="{{ settings.ddclass }}"><span>{{ order.paidStatushtml|raw }}</span></dd>
            </div>

            <div class="flex items-center gap-2">
                <dt class="{{ settings.dtclass }}"><strong>{{ 'Amount Paid'|t }}</strong></dt>
                <dd class="{{ settings.ddclass }}"><span>{{ order.totalPaidAsCurrency }}</span></dd>
            </div>

            {% if order.shippingMethodName %}
                <div class="flex items-center gap-2">
                    <dt class="{{ settings.dtclass }}"><strong>{{ 'Shipping Method'|t }}</strong></dt>
                    <dd class="{{ settings.ddclass }}"><span>{{ order.shippingMethodName }}</span></dd>
                </div>
            {% endif %}
        </dl>
    {% endif %}
{%- endmacro -%}


