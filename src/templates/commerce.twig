{% block form__collectemail %}

    {%- set email   = cart.email ??? null %}
    {%- set nexturl = siteUrl('shop/checkout/register-signin') -%}

    <form method="post" action="" class="">
        {{ csrfInput() }}
        {{ actionInput('commerce/cart/update-cart') }}
        {{ redirectInput(nexturl) }}
        {# {{ successMessageInput('') }} #}

        <div class="field">
            {{ tag( 'label', {
                for: 'email',
                text: "Let's start with your email"|t
            })}}
            {{ input('text', 'email', email, {
                id: 'email',
                required: true,
                placeholder: 'email@site.com'
            }) }}
        </div>

        <p class="">
            We only use your email address to track your orders and provide you access
            to your accounts. We do not share your information outside our company.
        </p>

        <div class="">
            {{ tag('button', {
                type : 'submit',
                class: 'button',
                text : 'Continue'|t
            }) }}
        </div>
    </form>
{% endblock %}



{## Select Payment Method
{---------------------------------------------------------------------------------------}

{-------------------------------------------------------------------------------------##}
{% block form__paymentmethod %}

    {%- set userid   = currentUser.id ??? null %}
    {%- set nexturl  = siteUrl('shop/checkout/payment') -%}

    {%- set sources  = craft.commerce.paymentSources.getAllPaymentSourcesByCustomerId( userid ) ??? [] %}
    {%- set gateways = craft.commerce.gateways.allCustomerEnabledGateways ??? [] %}

    {% if gateways %}
        <form method="post" action="" class="">
            {{ csrfInput() }}
            {{ actionInput('commerce/cart/update-cart') }}
            {{ redirectInput(nexturl) }}
            {# {{ successMessageInput('') }} #}

            <h2>Select a Payment Method</h2>

            <div x-data="{
                selectSource(id) {
                    document.getElementById(id).checked = true;
                    var ele = document.getElementsByName('gatewayId');
                    for(var i=0;i<ele.length;i++)
                        ele[i].checked = false;
                },

                selectGateway(id) {
                    document.getElementById(id).checked = true;
                    var ele = document.getElementsByName('paymentSourceId');
                    for(var i=0;i<ele.length;i++)
                        ele[i].checked = false;
                }
            }">
                {% if sources.firstWhere('gateway.handle', 'stripe') -%}
                    <div class="h3">Credit Cards on File</div>
                    {{ _self.payment_onfile( sources, cart.paymentSourceId ??? null ) }}
                    <div class="h3">Select a different method</div>
                {% endif %}

                {{ _self.payment_gateways( gateways, cart.gatewayId ??? null ) }}
            </div>

            <div class="">
                {{ tag('button', {
                    class: 'button',
                    text : 'Continue'|t
                }) }}
            </div>
        </form>
    {% else %}
        {{ tag( 'p', {
            class: 'error',
            text : 'No payment methods available.'|t
        }) }}
    {% endif %}
{% endblock %}


{%- macro payment_onfile( sources, currentId ) -%}
    {%- set sources   = collect( sources ??? [] ) -%}
    {%- set currentId = currentId ??? null %}
    {% for source in sources.all() -%}
        {% if source.gateway.handle == 'stripe' %}
            <div class="relative">
                <label class="block cursor-pointer flex gap-3 items-center pl-2 mcui-radio" for="sourceId-{{source.id}}">
                    {{ input('radio', 'paymentSourceId', source.id, {
                        id: "sourceId-#{source.id}",
                        checked: source.id == currentId
                    }) }}

                    <div></div>
                    <a
                        href="#"
                        class="font-bold clickable-parent"
                        x-data="{}"
                        @click.prevent="selectSource( 'sourceId-{{source.id}}' )"
                        @keydown.enter.prevent="selectSource( 'sourceId-{{source.id}}' )"
                        @keydown.space.prevent="selectSource( 'sourceId-{{source.id}}' )"
                    >{{ source.description }}</a>
                </label>
            </div>
        {% endif %}
    {% endfor %}
{%- endmacro -%}


