    {% if order %}
        {% if order.pdfUrl and craft.commerce.pdfs.hasEnabledPdf %}
            <a href="{{ order.getPdfUrl('receipt') }}" download target="_blank">{{ 'Download PDF'|t }}</a>
        {% endif %}

            {% if order.getOutstandingBalance() - order.getTotalAuthorized() > 0 %}
              <a href="{{ siteUrl(
                'shop/checkout/pay-static',
                { number: order.number, email: order.email
                }) }}" class="cursor-pointer rounded px-4 py-2 inline-block bg-blue-500 hover:bg-blue-600 text-white hover:text-white"
              >
                {{- 'Make payment'|t -}}
              </a>
            {% endif %}
    {% endif %}
{%- endmacro -%}